<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@color/Azure"
    tools:context=".LoginActivityClient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nice To See You "
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/tv_title"
                    android:layout_gravity="center"
                    android:background="@drawable/client_icon" />
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/et_user_name_client"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_account"
                android:drawablePadding="10dp"
                android:hint="Enter your username"
                android:inputType="textEmailAddress"

                android:padding="10dp"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/et_password_client"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:hint="Enter your password"
                android:inputType="textPassword"

                android:padding="10dp"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_register_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Sign up"
                android:textColor="@color/purple_200"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_login_client"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button"
                android:text="Login"
                android:textSize="25sp"
                android:typeface="monospace" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>