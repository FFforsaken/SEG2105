<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_welcome"
        android:orientation="vertical"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="418dp"
                android:layout_height="634dp"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-7dp"
                tools:layout_editor_absoluteY="-16dp">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/name_cook_main"
                    android:layout_width="83dp"
                    android:layout_height="34dp"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text_cook"
                    android:layout_width="93dp"
                    android:layout_height="29dp"
                    android:text="Cook account"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="410dp"
                    android:layout_height="109dp"
                    android:background="@drawable/layout_bg"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/icons96" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/icons8_purchase_request" />

                        <ImageView
                            android:id="@+id/imageView8"
                            :layout_weight="1"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:srcCompat="@drawable/icons8" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_logout_cook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="616dp"
                tools:ignore="MissingConstraints"
                android:backgroundTint="@color/purple_200"
                app:cornerRadius="28dp"
                />

            <Button
                android:id="@+id/btn_menu"
                android:layout_width="103dp"
                android:layout_height="60dp"
                android:text="Menu"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="521dp"
                tools:ignore="MissingConstraints"
                android:backgroundTint="@color/purple_200"
                app:cornerRadius="28dp"/>

            <Button
                android:id="@+id/btn_offered_meals_list"
                android:layout_width="103dp"
                android:layout_height="61dp"
                android:text="Offered Meals"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="225dp"
                tools:layout_editor_absoluteY="520dp"
                tools:ignore="MissingConstraints"
                android:backgroundTint="@color/purple_200"
                app:cornerRadius="28dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>