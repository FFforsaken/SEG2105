<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".RegisterActivity_client">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in "
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
         />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">

    </androidx.cardview.widget.CardView>
    <EditText
        android:id="@+id/et_firstname_cook"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:hint="First name"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_account"
        android:drawablePadding="10dp"
        android:textColor="@color/DeepSkyBlue"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/card_view"
        />
    <EditText
        android:id="@+id/et_lastname_cook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Last name"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_account"
        android:drawablePadding="10dp"
        android:textColor="@color/DeepSkyBlue"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/et_firstname_cook"/>

    <EditText
        android:id="@+id/et_username_cook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email address"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_account"
        android:drawablePadding="10dp"
        android:textColor="@color/DeepSkyBlue"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/et_lastname_cook"/>

    <EditText
        android:id="@+id/et_password_cook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_username_cook"
        android:hint="Password"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:textColor="@color/DeepSkyBlue"

        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginTop="20dp" />


    <EditText
        android:id="@+id/et_cheque"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_below="@id/et_password_cook"
        android:layout_marginTop="20dp"

        android:drawablePadding="10dp"
        android:hint="Scan your cheque"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/DeepSkyBlue"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/et_address_cook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_cheque"
        android:hint="Enter your address"
        android:textSize="20sp"

        android:drawablePadding="10dp"
        android:textColor="@color/DeepSkyBlue"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/et_shortdiscription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_address_cook"
        android:hint="Enter a short discription"
        android:textSize="20sp"

        android:drawablePadding="10dp"
        android:textColor="@color/DeepSkyBlue"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:layout_below="@id/et_shortdiscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_register_cook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Register"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btn_cancel_cook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>


</RelativeLayout>