<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A7E3FB"
    android:padding="10dp"
    tools:context=".RegisterClient">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Sign in "
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#C6EAF8"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView27"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/cooker_icon" />

                <EditText
                    android:id="@+id/et_firstname_cook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:hint="First name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView28"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/cooker_icon" />

                <EditText
                    android:id="@+id/et_lastname_cook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:hint="Last name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView29"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/email_icon" />

                <EditText
                    android:id="@+id/et_username_cook"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:hint="Email address"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView30"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/password_icon" />

                <EditText
                    android:id="@+id/et_password_cook"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView31"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/scan_icon" />

                <EditText
                    android:id="@+id/et_cheque"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:hint="Scan your cheque"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView32"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/home_icon" />

                <EditText
                    android:id="@+id/et_address_cook"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:hint="Enter your address"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView33"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/discription_icon" />

                <EditText
                    android:id="@+id/et_shortdiscription"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:hint="Enter a short discription"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_register_cook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="Register"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <Button
                    android:id="@+id/btn_cancel_cook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>