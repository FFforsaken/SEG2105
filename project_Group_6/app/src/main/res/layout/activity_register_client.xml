<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".RegisterClient">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in "
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
         />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/user2_icon" />

                <EditText
                    android:id="@+id/et_firstname_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawablePadding="10dp"
                    android:hint="First name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/user2_icon" />

                <EditText
                    android:id="@+id/et_lastname_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawablePadding="10dp"
                    android:hint="Last name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/email_icon" />

                <EditText
                    android:id="@+id/et_useremail_cook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawablePadding="10dp"
                    android:hint="Email address"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/password_icon" />

                <EditText
                    android:id="@+id/et_password_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawablePadding="10dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/card_icon" />

                <EditText
                    android:id="@+id/et_credit_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:drawablePadding="10dp"
                    android:hint="Card Number"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_CVV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="18dp"
                    android:drawablePadding="10dp"
                    android:hint="Enter your CVV"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_credit_card_expiration_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="18dp"
                    android:drawablePadding="10dp"
                    android:hint="Expiration date: MM/YY"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_address_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="10dp"

                    android:hint="Enter your address"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/DeepSkyBlue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_register_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="Register"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <Button
                    android:id="@+id/btn_cancel_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>